<h1>全ての投稿</h1>

<table>
  <tr>
    <th>ニックネーム</th>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.user.nickname %></td>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      
      <% if user_signed_in? && current_user.id == post.user_id %>
        <td><%= link_to '詳細', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post_path(post),
                    method: :delete, data: { confirm: '削除しますか？w'} %></td>
      <% end %>
    </tr>
  <% end %>
</table>